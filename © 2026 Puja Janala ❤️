<script>
function showNep() {
  document.getElementById("nep").classList.add("active");
  document.getElementById("eng").classList.remove("active");
}
function showEng() {
  document.getElementById("eng").classList.add("active");
  document.getElementById("nep").classList.remove("active");
}
function toggleDark() {
  document.body.classList.toggle("dark");
}
